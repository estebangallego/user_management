<div class="container">
	<div class="row">
		<h2>Edit user</h2>
		<form method="post" action="/user/update/<%= @user.id%>">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<div class="form-group">
				<label>First name</label>
				<input type="text" name="user[first_name]" class="form-control" value="<%= @user.first_name%>">
			</div>
			<div class="form-group">
				<label>Last name</label>
				<input type="text" name="user[last_name]" class="form-control" value="<%= @user.last_name%>">
			</div>
			<div class="form-group">
				<label>Email</label>
				<input type="email" name="user[email_address]" class="form-control" value="<%= @user.email_address%>">
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" name="user[password]" class="form-control">
			</div>
			<button type="submit" class="btn btn-primary">Update</button>
			<a href="/users" class="btn btn-primary">Back</a>
		</form>
		<%if flash[:errors] %>
			<% flash[:errors].each do |error|%>
				<h5 class="alert alert-danger"><%=error%></h5>
			<% end %>
		 <% end %>
	</div>
</div>